<%-include("navbar.ejs")%>;

<form action="/save_menu_card" method="post">
<div class="container p-3 border shadow" style="background-color: lavender">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h3 style="text-shadow:3px 3px skyblue;">Add New Product In Menu Card</h3>
        </div>
        <div class="col-md-4 mb-3">
            Product Name
            <input type="text" name="product_name" class="form-control">
        </div>
        <div class="col-md-4 mb-3">
            Product Type
            <select name="product_type" class="form-control">
                <option>Choose Product Type â–¼</option>
                <option>Starter</option>
                <option>Veg</option>
                <option>Non-veg</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            Product Price
            <input type="number" name="product_price" class="form-control">
        </div>
        <div class="col-md-12 text-center">
            <button class="btn btn-primary">Save Product</button>
        </div>
    </div>
</div>
</form>

<div class="container p-3 mt-5 border shadow" style="background-color: lavender">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h3 style="text-shadow:3px 3px skyblue;">Menu Card Product List</h3>
        </div>
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>Action</th>
                    <th>SR.NO</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                </tr>
                <% products.map((row,i)=>{ %>
                    <tr>
                        <td></td>
                        <td><%- i+1 %></td>
                        <td><%- row.product_name %></td>
                        <td><%- row.product_type %></td>
                        <td>&#8377; <%- row.product_price %></td>
                    </tr>
                 <% }) %>
            </table>
        </div>
    </div>
</div>


<%-include("footer.ejs") %>;